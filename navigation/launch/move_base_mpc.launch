<?xml version="1.0"?>
<launch>
  <!-- Move Base with MPC Local Planner -->

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <!-- Remap cmd_vel to /cmd_vel_raw for inverter -->
    <remap from="cmd_vel" to="/cmd_vel_raw"/>
    <remap from="odom" to="/p3dx/odom"/>

    <!-- Costmap parameters -->
    <rosparam file="/navigation/config/costmap_common.yaml" command="load" ns="global_costmap"/>
    <rosparam file="/navigation/config/costmap_common.yaml" command="load" ns="local_costmap"/>
    <rosparam file="/navigation/config/local_costmap.yaml" command="load"/>
    <rosparam file="/navigation/config/global_costmap.yaml" command="load"/>

    <!-- Local planner (MPC) -->
    <rosparam file="/navigation/config/mpc_local_planner.yaml" command="load"/>
    <param name="base_local_planner" value="mpc_local_planner/MpcLocalPlannerROS"/>

    <!-- Global planner -->
    <param name="base_global_planner" value="navfn/NavfnROS"/>

    <!-- Tolerances -->
    <param name="controller_frequency" value="10.0"/>
    <param name="planner_frequency" value="1.0"/>
  </node>

</launch>
